{
  "name": "paymaster-management-app",
  "license": "UNLICENSED",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "clean:all": "pnpm clean:dist && pnpm clean:coverage && pnpm clean:turbo && pnpm clean:node-modules",
    "clean:coverage": "turbo clean:coverage",
    "clean:dist": "turbo clean:dist",
    "clean:node-modules": "turbo clean:node-modules && rimraf node_modules",
    "clean:turbo": "turbo clean:turbo && rimraf .turbo",
    "format:check": "prettier -c .",
    "format:fix": "prettier -w .",
    "lint": "turbo lint --continue",
    "lint:fix": "turbo lint:fix --continue",
    "prepare": "[ -n \"$DOCKER\" ] || husky",
    "prisma:generate": "turbo prisma:generate",
    "prisma:migrate:deploy": "turbo prisma:migrate:deploy",
    "prisma:migrate:dev": "turbo prisma:migrate:dev --ui=tui",
    "prisma:migrate:reset": "turbo prisma:migrate:reset",
    "prisma:seed": "turbo prisma:seed",
    "prisma:studio": "turbo prisma:studio",
    "start:dev": "turbo start:dev --ui=tui",
    "test": "turbo test --continue"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/jest-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "22.16.5",
    "husky": "9.1.7",
    "lint-staged": "16.1.6",
    "rimraf": "6.0.1",
    "turbo": "2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@10.15.1+sha512.34e538c329b5553014ca8e8f4535997f96180a1d0f614339357449935350d924e22f8614682191264ec33d1462ac21561aff97f6bb18065351c162c7e8f6de67",
  "engines": {
    "node": "22",
    "pnpm": "10"
  },
  "pnpm": {
    "overrides": {
      "eslint": "8.57.1"
    }
  }
}
